package prueba;

import java.util.Scanner;

public class ejer3refuerzo {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);

		int n = 0;

		System.out.println("Por favor introduzca el numero de palabras que quiere introducir");
		n = sc.nextInt();

		int[] arrayNumeros = new int[n];

		String[] arrayString = new String[n];
		
		

		System.out.println("Introduzca las palabras");
		for (int i = 0; i <arrayString.length; i++) {

			arrayString[i] = sc.nextLine();
		}

		System.out.println("Dele ahora un valor numerico entre 0 y un maximo del tamaÃ±o menos uno, no puede repetirse");

		for (int i = 0; i <arrayNumeros.length; i++) {

			arrayNumeros[i] = sc.nextInt();

		}

	}
}
