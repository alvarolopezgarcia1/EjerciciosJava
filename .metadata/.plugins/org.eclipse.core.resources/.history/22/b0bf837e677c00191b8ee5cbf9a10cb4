
public class piramideNumeros {

	  // Tiene que recibir la cantidad m√°xima de valores a mostrar
    // Siempre sera un valor impar
    public static void main(String[] args)
    {
        // obtenemos el valor recibido
        int max=new Integer(args[0]);
        int i=0,contador=0,cantidadPorLinea=0;
 
        for(i=1;i<=max;i++)
        {
            // Mostramos los numeros
            System.out.print(i+" ");
            if(contador++==cantidadPorLinea)
            {
                cantidadPorLinea++;
                contador=0;
                System.out.println();
            }
        }
        System.out.println();
    }
}
